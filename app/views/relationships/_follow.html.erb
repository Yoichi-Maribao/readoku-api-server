<% if user != current_user %>
  <% if controller.action_name == "index" %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', unfollow_path(user.id), method: :DELETE, remote: true %>
    <% else %>
      <%= link_to 'フォローする', follow_path(user.id), method: :POST, remote: true %>
    <% end %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', unfollow_path(user.id), class: "btn btn-primary",method: :DELETE, remote: true %>
    <% else %>
      <%= link_to 'フォローする', follow_path(user.id), class: "btn btn-primary", method: :POST, remote: true %>
    <% end %>
  <% end %>
<% end%>