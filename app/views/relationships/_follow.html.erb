<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', unfollow_path(user.id), class: "btn btn-sm btn-primary",method: :DELETE, remote: true %>
  <% else %>
    <%= link_to 'フォローする', follow_path(user.id), class: "btn btn-sm btn-primary", method: :POST, remote: true %>
  <% end %>
<% end %>